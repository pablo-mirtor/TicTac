<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="TicTac Codigo">
		<class>negocio.trabajador.Trabajador</class>
		<class>negocio.trabajador.TrabajadorParcial</class>
		<class>negocio.trabajador.TrabajadorCompleto</class>
		<class>negocio.competencia.Competencia</class>
		<class>negocio.departamento.Departamento</class>
		<class>negocio.competencia.CompetenciaTrabajador</class>
		<class>negocio.competencia.CompetenciaTrabajadorId</class>
        <exclude-unlisted-classes>false</exclude-unlisted-classes>
		<properties>
				<property name="eclipselink.ddl-generation" value="create-tables"/>
				<property name="eclipselink.create-ddl-jdbc-file-name" value="createDDL_ddlGeneration.jdbc"/>
				<property name="eclipselink.drop-ddl-jdbc-file-name" value="dropDDL_ddlGeneration.jdbc"/>
				<property name="eclipselink.ddl-generation.output-mode" value="both"/>
				<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
				<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/tictac"/>
				<property name="javax.persistence.jdbc.user" value="root"/>
				<property name="javax.persistence.jdbc.password" value=""/>
			</properties>
	</persistence-unit>
</persistence>
